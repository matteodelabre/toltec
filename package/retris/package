# vim: set ft=sh:
pkgname=retris
pkgver=0.5.5-1
pkgdesc="Implementation of rust tetris_core on the reMarkable using libremarkable"
section=remarkable-apps
maintainer="Linus K. <linus@cosmos-ink.net>"
license=MIT

image=rust
origin=https://github.com/LinusCDE/retris.git
revision=29703b0926cdef5bddf142301593c0b1af6805df

build() {
    # Fall back to system-wide config
    rm .cargo/config

    cargo build --release
    arm-linux-gnueabihf-strip target/armv7-unknown-linux-gnueabihf/release/retris
}

package() {
    install -D -m 755 -t "$pkgdir"/opt/bin "$srcdir"/target/armv7-unknown-linux-gnueabihf/release/retris
    install -D -m 644 "$srcdir"/oxide "$pkgdir"/opt/etc/draft/retris
    install -D -m 644 "$srcdir"/icon.png "$pkgdir"/opt/etc/draft/icons/retris.png
}
