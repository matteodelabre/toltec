# SPDX-License-Identifier: MIT

pkgnames=(templatectl)
pkgdesc="Tool to add/remove templates for xochitl"
url=https://github.com/PeterGrace/templatectl
pkgver=0.1.1-1
timestamp=2021-01-15T00:49Z
section=utils
maintainer="Peter Grace <pete.grace@gmail.com>"
license=MIT

image=rust:v1.2.2
source=(https://github.com/PeterGrace/templatectl/archive/v0.1.1.zip)
sha256sums=(e7e4bfcc16e1f7bb710484b737666515b67a38ab79646a0beb20868e9d828f35)

build() {
    cargo build --release
}

package() {
    install -D -m 755 -t "$pkgdir"/opt/bin \
        "$srcdir"/target/armv7-unknown-linux-gnueabihf/release/templatectl
}
